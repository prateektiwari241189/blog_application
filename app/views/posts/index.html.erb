<%= image_tag "travel.jpg" ,{:style => "width:1349px;height:400px"}  %>

<div class="container">
	<div class="col-md-3">
    	<%= render 'popular_post'%>
    	
    </div>
	<% @posts.each do |post| %>
<div class="col-md-9" style= "float:right">
    	<div class="post_wrapper">
       	 	<h2 class="title"><%= link_to post.title, post%></h2>
       	 	<%= image_tag post.image_url.to_s  ,{:style => "width:600px;"} %>
        	<p class="date"><%= post.created_at.strftime("%B, %d, %Y") %></p>
    	</div>
    </div>
   
     <% end %>
  
    
</div>
  
